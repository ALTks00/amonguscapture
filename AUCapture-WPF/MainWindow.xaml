<mah:MetroWindow x:Class="AUCapture_WPF.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 xmlns:dialogs="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:localize="http://gu.se/Localization"
                 xmlns:l="clr-namespace:Gu.Wpf.Localization;assembly=Gu.Wpf.Localization"
                 xmlns:p="clr-namespace:AUCapture_WPF"
                 xmlns:auCaptureWpf="clr-namespace:AUCapture_WPF"
                 mc:Ignorable="d"
                 Style="{DynamicResource MahApps.Styles.MetroWindow.Clean}"
                 ResizeMode="CanResizeWithGrip"
                 Title="{localize:Static auCaptureWpf:Strings.AppTitle}" TitleAlignment="Center" Height="450" Width="800"
                 ShowInTaskbar="True"
                 TitleCharacterCasing="Normal"
                 ShowSystemMenu="False"
                 ShowSystemMenuOnRightClick="False"
                 dialogs:DialogParticipation.Register="{Binding }"
                 ContentRendered="MainWindow_OnContentRendered" Loaded="MetroWindow_Loaded" TryToBeFlickerFree="True" MinWidth="300" MinHeight="200" >
    <mah:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/clean/Controls.xaml" />
                <!-- MahApps.Metro resource dictionaries. Make sure that all file names are Case Sensitive! -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <!-- Theme setting -->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </mah:MetroWindow.Resources>
    <mah:MetroWindow.IconTemplate>
        <DataTemplate>
            <iconPacks:PackIconUnicons Width="{TemplateBinding Width}"
                                       Height="{TemplateBinding Height}"
                                       Margin="4"
                                       Foreground="{DynamicResource MahApps.Brushes.Text}"
                                       Kind="Capture" />
        </DataTemplate>
    </mah:MetroWindow.IconTemplate>
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button Click="ManualConnect_Click" x:Name="ManualConnectButton"
                    ToolTip="{l:Static p:Strings.ManualConnectButtonToolTip}">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconModern Width="22" Height="22" VerticalAlignment="Center" Kind="Connect" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Click="Settings" ToolTip="{localize:Static auCaptureWpf:Strings.SettingsToolTip}">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconModern Width="22" Height="22" VerticalAlignment="Center" Kind="Settings" />
                            <TextBlock Margin="4 0 0 0" VerticalAlignment="Center" Text="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>


    <mah:MetroWindow.Flyouts>
        <mah:FlyoutsControl>
            <mah:Flyout x:Name="SettingsFlyout" Header="{localize:Static auCaptureWpf:Strings.SettingsFlyoutHeader}" Position="Right" Width="300" Theme="Adapt"
                        IsAutoCloseEnabled="False" AnimateOpacity="True" ExternalCloseButton="Left">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TabControl Grid.Row="1" mah:TabControlHelper.Underlined="TabPanel">
                        <mah:MetroTabItem Header="{localize:Static auCaptureWpf:Strings.GeneralSettingsTab}">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Orientation="Vertical">
                                    <mah:ToggleSwitch x:Name="Darkmode_toggleswitch" Header="{localize:Static auCaptureWpf:Strings.DarkmodetoggleswitchHeader}"
                                                      IsOn="{Binding Settings.DarkMode, Mode=TwoWay}"
                                                      Toggled="Darkmode_Toggled" />
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{localize:Static auCaptureWpf:Strings.FontSizeHeader}" VerticalAlignment="Center" Margin="4 0 0 0" />
                                        <Slider Name="FontSlider" Maximum="72" Width="200" Minimum="1"
                                                AutoToolTipPlacement="TopLeft"
                                                Value="{Binding Settings.fontSize, Mode=TwoWay}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{localize:Static auCaptureWpf:Strings.LanguageHeader}" VerticalAlignment="Center" Margin="4 0 0 0" />
                                        <l:LanguageSelector AutogenerateLanguages="True" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </mah:MetroTabItem>
                        <mah:MetroTabItem Header="{localize:Static auCaptureWpf:Strings.DebugHeader}" >
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Orientation="Vertical">
                                    <mah:ToggleSwitch x:Name="DebugConsole_Toggle" Header="{localize:Static auCaptureWpf:Strings.DebugConsoleToggleHeader}"
                                                      IsOn="{Binding Settings.debug, Mode=TwoWay}"/>
                                </StackPanel>
                            </ScrollViewer>
                        </mah:MetroTabItem>
                        <mah:MetroTabItem Header="About" >
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{localize:Static auCaptureWpf:Strings.CurrentVersionBox}" VerticalAlignment="Center" Margin="4 0 3 0" />
                                        <TextBox VerticalAlignment="Center" MinWidth="150" IsReadOnly="True" Text="{Binding Version, Mode=OneWay}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{localize:Static auCaptureWpf:Strings.LatestVersionBox}" VerticalAlignment="Center" Margin="4 0 3 0" />
                                        <TextBox VerticalAlignment="Center" MinWidth="150" IsReadOnly="True" Text="{Binding LatestVersion, Mode=OneWay}"/>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </mah:MetroTabItem>
                    </TabControl>

                </Grid>
            </mah:Flyout>
            <mah:Flyout x:Name="ManualConnectionFlyout" Header="{localize:Static auCaptureWpf:Strings.ManualConnectionFlyoutHeader}" Position="Right" Width="300" Theme="Adapt"
                        IsAutoCloseEnabled="False" AnimateOpacity="True" ExternalCloseButton="Right">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{localize:Static auCaptureWpf:Strings.HostBox}" VerticalAlignment="Center" Margin="4 0 3 0" />
                                <TextBox x:Name="Host" VerticalAlignment="Center" MinWidth="150" Text="{Binding Settings.host, Mode=TwoWay}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{localize:Static auCaptureWpf:Strings.CodeBox}" VerticalAlignment="Center" Margin="4 0 0 0" />
                                <TextBox x:Name="Code" VerticalAlignment="Center" MinWidth="150" Text="{Binding Settings.connectCode, Mode=TwoWay}"/>
                            </StackPanel>
                            <Button Content="{localize:Static auCaptureWpf:Strings.SubmitButtonContent}" x:Name="SubmitConnectButton" Margin="20" Click="SubmitConnectButton_OnClick"></Button>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </mah:Flyout>
            <mah:Flyout x:Name="MemeFlyout" Header="{localize:Static auCaptureWpf:Strings.MemeFlyoutHeader}" Position="Right" Width="{Binding ActualWidth,ElementName=MainGrid}" Theme="Adapt"
                        IsAutoCloseEnabled="False" AnimateOpacity="True" CloseButtonVisibility="Hidden"  ExternalCloseButton="Right" IsOpenChanged="MemeFlyout_OnIsOpenChanged">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <MediaElement x:Name="MemePlayer" Source="https://ia800803.us.archive.org/29/items/MacArthur_Foundation_100andChange_dQw4w9WgXcQ/Rick_Astley_-_Never_Gonna_Give_You_Up_dQw4w9WgXcQ.mp4" LoadedBehavior="Manual" MediaEnded="MemePlayer_OnMediaEnded"
                                  UseLayoutRounding="True" DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </Grid>
            </mah:Flyout>
        </mah:FlyoutsControl>
        
    </mah:MetroWindow.Flyouts>
    

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TabControl Grid.Row="0" mah:TabControlHelper.Underlined="TabPanel">
            <mah:MetroTabItem Header="{localize:Static auCaptureWpf:Strings.MainConsoleHeader}">
                
                <DockPanel x:Name="ConsoleDockPanel" ScrollViewer.CanContentScroll="True" UseLayoutRounding="True">
                    
                    <RichTextBox Name="ConsoleTextBox" FontFamily="Consolas" Visibility="Visible" FontSize="{Binding Settings.fontSize, Mode=OneWay}"
                                 IsReadOnly="True" DockPanel.Dock="Top"
                                 mah:ScrollViewerHelper.IsHorizontalScrollWheelEnabled="True"
                                 VerticalScrollBarVisibility="Auto"
                                 MaxHeight="{Binding ActualHeight, ElementName=ConsoleDockPanel}"
                                 Height="{Binding ActualHeight, ElementName=ConsoleDockPanel}" UseLayoutRounding="True" />
                    
                </DockPanel>
            </mah:MetroTabItem>
        </TabControl>


        <StatusBar Grid.Row="1" SnapsToDevicePixels="True">
            <StackPanel Orientation="Horizontal">
                <StatusBarItem>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{localize:Static auCaptureWpf:Strings.GameStatus}" VerticalAlignment="Center" Foreground="{DynamicResource MahApps.Brushes.Text}" Margin="4 0 0 0" />
                        <TextBox x:Name="StatusBox" mah:TextBoxHelper.Watermark="{localize:Static auCaptureWpf:Strings.UNKNOWN}" Margin="4 0 0 0"
                                 VerticalAlignment="Center" IsManipulationEnabled="True" Focusable="False"
                                 IsHitTestVisible="False" AllowDrop="False" IsReadOnly="True" />
                    </StackPanel>
                </StatusBarItem>
                <Separator Style="{DynamicResource MahApps.Styles.Separator.StatusBar}" Foreground="{DynamicResource MahApps.Brushes.Text}" />
                <StatusBarItem>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{localize:Static auCaptureWpf:Strings.GameCode}" VerticalAlignment="Center" Foreground="{DynamicResource MahApps.Brushes.Text}" Margin="4 0 0 0" />
                        <TextBox x:Name="GameCodeBox" Text="" mah:TextBoxHelper.Watermark="{localize:Static auCaptureWpf:Strings.UNKNOWN}"
                                 ToolTip="{localize:Static auCaptureWpf:Strings.GameCodeBoxToolTip}" Margin="4 0 0 0" VerticalAlignment="Center"
                                 IsManipulationEnabled="True" Focusable="False" IsHitTestVisible="True"
                                 AllowDrop="False" IsReadOnly="True" MouseLeftButtonUp="GameCodeBox_MouseLeftButtonUp" />
                    </StackPanel>
                </StatusBarItem>
            </StackPanel>
        </StatusBar>
    </Grid>
</mah:MetroWindow>